{
  "docs": [
    {{!--   VIDEOS   --}}
    {{#repeat 5000}}
    {
      "_id": "v{{@index}}",
      "type": "video",
      "user" : {
        "id_user": "u{{int 0 799}}",
        "name": "{{firstName}} {{lastName}}",
        "avatar": "uploads/avatars/default_avatar_{{int 1 8}}.png"
      },
      "date": "{{date '2024-10-07' '2025-11-07' 'YYYY-MM-DD HH:mm:ss'}}",
      "name": "{{lorem min=3 max=8}}",
      "desc": "{{lorem min=10 max=40}}",
      "path": "uploads/videos/videoTest.mp4",
      "thumbnail": "uploads/thumbnails/default_thumbnail.png",
      "audio": "uploads/audios/videoTest.mp3",
      "views": {{int 0 10000}}
    }
    {{#unless @last}},{{/unless}}
    {{/repeat}},
    {{!--   USERS   --}}
    {{#repeat 800}}
    {
      "_id": "u{{@index}}",
      "type": "user",
      "name": "{{firstName}} {{lastName}}",
      "avatar": "uploads/avatars/default_avatar_{{int 1 8}}.png",
      "desc": "{{lorem min=10 max=30}}",
      "email": "{{email}}",
      "password": "{{lorem 1}}{{int 1000 9999}}",
      "subscribers": {{int 0 5000}},
      "date": "{{date '2014-10-07' '2025-11-07' 'YYYY-MM-DD HH:mm:ss'}}"
    }
    {{#unless @last}},{{/unless}}
    {{/repeat}},
    {{!--   COMMENTS   --}}
    {{#repeat 7500}}
    {
      "_id": "c{{@index}}",
      "type": "comment",
      "user" : {
        "id_user": "u{{int 0 799}}",
        "name": "{{firstName}} {{lastName}}",
        "avatar": "uploads/avatars/default_avatar_{{int 1 8}}.png"
      },
      "id_video": "v{{int 0 1999}}",
      "date": "{{date '2024-10-07' '2025-11-07' 'YYYY-MM-DD HH:mm:ss'}}",
      "content": "{{lorem min=5 max=25}}"
    }
    {{#unless @last}},{{/unless}}
    {{/repeat}},
    {{!--   ID_COUNTER   --}}
    {
      "_id": "counter",
      "type": "counter",
      "user_counter": 799,
      "video_counter": 1999,
      "comment_counter": 7499 
    }
  ]
}
